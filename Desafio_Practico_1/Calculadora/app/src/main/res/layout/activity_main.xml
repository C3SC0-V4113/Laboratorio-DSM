<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="48dp">

        <TableLayout
            android:id="@+id/tablelyt_nmb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <TableRow>
                <TextView
                    android:id="@+id/frac1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fracción 1:"
                    android:textSize="20sp"
                    android:layout_column="0"/>
                <TextView
                    android:id="@+id/frac2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fracción 2:"
                    android:textSize="20sp"
                    android:layout_column="3"/>
            </TableRow>

            <TableRow>
                <EditText
                    android:id="@+id/et1f1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:minHeight="48dp"
                    android:layout_centerHorizontal="true"
                    android:minWidth="48dp"
                    android:hint="Numerador"
                    android:layout_column="0"/>

                <EditText
                    android:id="@+id/et1f2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:minHeight="48dp"
                    android:minWidth="48dp"
                    android:hint="Numerador"
                    android:layout_centerHorizontal="true"
                    android:layout_column="3"/>

            </TableRow>
            <TableRow>
                <EditText
                    android:id="@+id/et2f1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="48dp"
                    android:layout_marginTop="20dp"
                    android:inputType="numberSigned"
                    android:minHeight="48dp"
                    android:hint="Denominador"
                    android:layout_below="@+id/et1f1"
                    android:layout_column="0"/>

                <EditText
                    android:id="@+id/et2f2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:minWidth="48dp"
                    android:inputType="numberSigned"
                    android:minHeight="48dp"
                    android:hint="Denominador"
                    android:layout_below="@+id/et1f2"
                    android:layout_column="3"/>
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/tablelyt"
            android:layout_below="@+id/tablelyt_nmb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <TableRow>
                <Button
                    android:id="@+id/button"
                    android:onClick="sumar"
                    android:text="SUMAR"
                    android:layout_column="0"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/teal_700"/>

                <Button
                    android:id="@+id/button2"
                    android:onClick="restar"
                    android:text="RESTAR"
                    android:layout_margin="10dp"
                    android:layout_column="1"
                    android:backgroundTint="@color/teal_700"/>
            </TableRow>

            <TableRow>
                <Button
                    android:id="@+id/button3"
                    android:onClick="multiplicar"
                    android:text="MULTIPLICAR"
                    android:layout_margin="10dp"
                    android:layout_column="0"
                    android:backgroundTint="@color/teal_700"/>

                <Button
                    android:id="@+id/button4"
                    android:onClick="division"
                    android:text="DIVIDIR"
                    android:layout_margin="10dp"
                    android:layout_column="1"
                    android:backgroundTint="@color/teal_700"/>
            </TableRow>

        </TableLayout>



    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>